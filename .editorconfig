root = true

# ====================
# Core File Formatting
# ====================
[*]
indent_style = space
indent_size = 4
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf # Matches your --lineend=linux

# ====================
# C# Formatting Rules
# ====================
[*.cs]

# Indentation & Braces (matches your Allman/BSD style)
csharp_new_line_before_open_brace = all
csharp_new_line_before_else = true
csharp_new_line_before_catch = true
csharp_new_line_before_finally = true

# Indentation details (mirrors your astyle --indent-* rules)
csharp_indent_case_contents = true
csharp_indent_switch_labels = true
csharp_indent_block_contents = true

# Spacing preferences
csharp_space_after_keywords_in_control_flow_statements = true # if (condition)
csharp_space_between_method_call_parameter_list_parentheses = false # Method(arg)
csharp_space_between_parentheses = none
csharp_space_after_colon_in_inheritance_clause = true

# ====================
# Naming Conventions
# ====================
# Your code uses PascalCase for public members and camelCase for locals.
# These rules will flag deviations in the IDE.

# Public/Internal members: PascalCase
dotnet_naming_rule.public_members_should_be_pascal_case.severity = suggestion
dotnet_naming_rule.public_members_should_be_pascal_case.symbols = public_symbols
dotnet_naming_rule.public_members_should_be_pascal_case.style = pascal_case_style

dotnet_naming_symbols.public_symbols.applicable_kinds = property, method, field, event, delegate
dotnet_naming_symbols.public_symbols.applicable_accessibilities = public, internal, protected, protected_internal, private_protected
dotnet_naming_symbols.public_symbols.required_modifiers = 

dotnet_naming_style.pascal_case_style.capitalization = pascal_case

# Parameters and local variables: camelCase (your style, e.g., 'sqlConnectionString')
dotnet_naming_rule.parameters_and_locals_should_be_camel_case.severity = suggestion
dotnet_naming_rule.parameters_and_locals_should_be_camel_case.symbols = parameters_and_locals
dotnet_naming_rule.parameters_and_locals_should_be_camel_case.style = camel_case_style

dotnet_naming_symbols.parameters_and_locals.applicable_kinds = parameter, local
dotnet_naming_style.camel_case_style.capitalization = camel_case

# ====================
# Modern C# Style Preferences (SUGGESTIONS)
# ====================
# These are set to 'suggestion' severity. They appear as IDE hints (lightbulb)
# you can apply with Ctrl+., encouraging exploration without breaking your flow.

# 1. Prefer 'var' when type is obvious (e.g., right-hand side is 'new' or a cast)
csharp_style_var_when_type_is_apparent = true:suggestion

# 2. Use expression-bodied members for simple getters/methods
csharp_style_expression_bodied_methods = when_on_single_line:suggestion
csharp_style_expression_bodied_accessors = when_on_single_line:suggestion
csharp_style_expression_bodied_constructors = when_on_single_line:suggestion
csharp_style_expression_bodied_operators = when_on_single_line:suggestion
csharp_style_expression_bodied_lambdas = when_on_single_line:suggestion

# 3. Prefer pattern matching (you already use `is not null`)
csharp_style_prefer_pattern_matching = true:suggestion

# 4. Use simple 'using' declaration (like you do: 'using StreamReader LineReader = ...')
csharp_style_prefer_simple_using_statement = true:suggestion

# 5. Prefer switch expressions for clarity over large switch statements
csharp_style_prefer_switch_expression = true:suggestion
